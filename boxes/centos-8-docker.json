{
	"builders": [
		{
			"type": "vagrant",
			"source_path": "centos/8",
			"provider": "virtualbox",
			"communicator": "ssh",
			"ssh_username": "vagrant",
			"ssh_password": "vagrant",
			"ssh_wait_timeout": "60s"
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"inline": [
				"sudo yum install -y git"
			]
		}
	]
}
